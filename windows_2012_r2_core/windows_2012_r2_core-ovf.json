{
  "variables": {
    "version": "2.1"
  },
  "builders": [
    {
      "type": "vmware-windows-iso",
      "vm_name": "windows_2012_r2_core",
      "iso_url": "iso/Windows Server2012r2.iso",
      "iso_checksum_type": "md5",
      "iso_checksum": "0E7C09AAB20DEC3CD7EAB236DAB90E78",
      "headless": false,
      "boot_wait": "10m",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_wait_timeout": "6h",
      "shutdown_timeout": "1h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "guest_os_type": "windows8srv-64",
      "tools_upload_flavor": "windows",
      "disk_size": 32768,
      "floppy_files": [
        "files/pvscsi/*",
        "files/vmxnet3/*",
        "windows_2012_r2_core/Autounattend.xml",
        "scripts/init.bat",
        "scripts/network-location.ps1",
        "scripts/microsoft-updates.bat",
        "scripts/winrm-tools.ps1"
      ],
      "vmdk_name": "windows_2012_r2_core",
      "vmx_data": {
        "memsize": "2048",
        "numvcpus": "2",
        "cpuid.coresPerSocket": "1",
        "scsi0.virtualDev": "pvscsi",
        "ethernet0.virtualdev" : "vmxnet3",
        "virtualhw.productcompatibility" : "esx",
        "virtualhw.version" : "10"
      }
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
	    "elevated_user": "vagrant",
	    "elevated_password": "vagrant",
      "scripts": [
        "scripts/install-vmware-tools.ps1"
      ]
    },
    {
      "type": "powershell",
	    "elevated_user": "Administrator",
	    "elevated_password": "vagrant",
      "scripts": [
        "scripts/install-vmware-tools.ps1",
        "scripts/RDP.ps1",
        "scripts/no-auto-login.ps1",
        "scripts/final-tweaks.ps1"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant-vmware-ovf",
      "keep_input_artifact": false,
      "compression_level": 0,
      "output": "{{.BuildName}}-{{.Provider}}-{{user `version`}}.box"
    }
  ]
}
