{
  "variables": {
    "build_vm_name": "windows_2012_r2_core",
    "iso_url": "http://192.168.220.1:8080/iso/windows.iso",
    "temp_user": "vagrant",
    "version": "2.2"
  },
  "builders": [
    {
      "type": "vmware-windows-iso",
      "vm_name": "{{user `build_vm_name`}}",
      "iso_url": "iso/Windows Server2012r2.iso",
      "iso_checksum_type": "md5",
      "iso_checksum": "0E7C09AAB20DEC3CD7EAB236DAB90E78",
      "headless": false,
      "boot_wait": "6m",
      "output_directory": "builds/{{user `build_vm_name`}}",
      "winrm_username": "{{user `temp_user`}}",
      "winrm_password": "{{user `temp_user`}}",
      "winrm_wait_timeout": "2h",
      "shutdown_timeout": "1h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "guest_os_type": "windows8srv-64",
      "disk_size": 32768,
      "floppy_files": [
        "files/pvscsi/*",
        "files/vmxnet3/*",
        "windows_2012_r2_core/Autounattend.xml",
        "scripts/init.bat",
        "scripts/microsoft-updates.bat",
        "scripts/winrm-tools.ps1"
      ],
      "vmdk_name": "windows_2012_r2_core",
      "vmx_data": {
        "memsize": "2048",
        "numvcpus": "2",
        "cpuid.coresPerSocket": "1",
        "scsi0.virtualDev": "pvscsi",
        "ethernet0.virtualdev" : "vmxnet3",
        "virtualhw.productcompatibility" : "esx",
        "virtualhw.version" : "10"
      }
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "remote_path": "/tmp/install-vmware-tools.ps1",
      "script": "scripts/install-vmware-tools.ps1",
      "execute_command": "install-vmware-tools.ps1 -user {{user `temp_user`}} -iso_url {{user `iso_url`}}"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant-vmware-ovf",
      "keep_input_artifact": false,
      "compression_level": 0,
      "output": "{{user `build_vm_name`}}-{{.Provider}}-{{user `version`}}.box"
    }
  ]
}
