{
  "builders":
  [
    {
      "type": "vmware-windows-iso",
      "vm_name": "windows_2012_r2",
      "iso_url": "iso/Windows Server2012r2.iso",
      "iso_checksum_type": "md5",
      "iso_checksum": "0E7C09AAB20DEC3CD7EAB236DAB90E78",
      "headless": false,
      "boot_wait": "5m",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_wait_timeout": "6h",
      "shutdown_timeout": "1h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "guest_os_type": "windows8srv-64",
      "disk_size": 40960,
      "floppy_files":
      [
        "windows_2012_r2/Autounattend.xml",
        "scripts/init.bat",
        "scripts/network-location.ps1",
        "scripts/microsoft-updates.bat",
        "scripts/winrm-tools.ps1"        
      ],
      "vmdk_name": "windows_2012_r2",
      "vmx_data":
      {
        "memsize": "4096",
        "numvcpus": "2",
        "cpuid.coresPerSocket": "1",
        "scsi0.virtualDev": "lsisas1068"
      }
    }
  ],
  "provisioners":
  [
    {
      "type": "powershell",
      "scripts":
      [
        "scripts/install-vmhost-additions.ps1"
      ],
      "pause_before": "3m"
    },  
    {
      "type": "powershell",
      "scripts":
      [   
        "scripts/registry-tweaks.ps1",
        "scripts/border-width.ps1",
        "scripts/RDP.ps1",
        "scripts/no-auto-login.ps1",
        "scripts/final-tweaks.ps1"
      ],
      "pause_before": "3m"
    }
  ],  
  "post-processors":
  [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "compression_level": 0,
      "output": "{{.Provider}}_windows_2012_r2.box",
      "vagrantfile_template": "windows_2012_r2/Vagrantfile.template"
    }
  ]
}
