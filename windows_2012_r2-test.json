{
  "variables": {
    "build_name": "windows_2012_r2",
    "project_url": "http://192.168.220.1:8080",
    "temp_user": "vagrant",
    "temp_pass": "vagrant",
    "version": "2.2"
  },
  "builders": [
    {
      "name": "standard",
      "vm_name": "{{user `build_name`}}",
      "type": "vmware-windows-iso",
      "iso_url": "iso/Windows Server2012r2.iso",
      "iso_checksum_type": "md5",
      "iso_checksum": "0E7C09AAB20DEC3CD7EAB236DAB90E78",
      "headless": true,
      "output_directory": "builds/{{user `build_name`}}",
      "winrm_username": "{{user `temp_user`}}",
      "winrm_password": "{{user `temp_pass`}}",
      "winrm_wait_timeout": "2h",
      "shutdown_timeout": "1h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "guest_os_type": "windows8srv-64",
      "disk_size": 32768,
      "floppy_files": [
        "files/unattended/{{user `build_name`}}/Autounattend.xml",
        "files/drivers/pvscsi/*",
        "files/drivers/vmxnet3/*",
        "scripts/init.bat",
        "scripts/winrm-tools.ps1"
      ],
      "vmdk_name": "{{user `build_name`}}",
      "vmx_data": {
        "memsize": "4096",
        "numvcpus": "2",
        "cpuid.coresPerSocket": "1",
        "scsi0.virtualDev": "pvscsi",
        "ethernet0.virtualdev" : "vmxnet3",
        "virtualhw.productcompatibility" : "esx",
        "virtualhw.version" : "10"
      }
    },
    {
      "name": "core",
      "vm_name": "{{user `build_name`}}_test",
      "type": "vmware-windows-iso",
      "iso_url": "iso/Windows Server2012r2.iso",
      "iso_checksum_type": "md5",
      "iso_checksum": "0E7C09AAB20DEC3CD7EAB236DAB90E78",
      "headless": false,
      "output_directory": "builds/{{user `build_name`}}_test",
      "winrm_username": "{{user `temp_user`}}",
      "winrm_password": "{{user `temp_pass`}}",
      "winrm_wait_timeout": "2h",
      "shutdown_timeout": "1h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "guest_os_type": "windows8srv-64",
      "disk_size": 32768,
      "floppy_files": [
        "files/unattended/{{user `build_name`}}_core/Autounattend.xml",
        "files/drivers/pvscsi/*",
        "files/drivers/vmxnet3/*",
        "scripts/init.bat",
        "scripts/winrm-tools.ps1"
      ],
      "vmdk_name": "{{user `build_name`}}_test",
      "vmx_data": {
        "memsize": "4096",
        "numvcpus": "2",
        "cpuid.coresPerSocket": "1",
        "scsi0.virtualDev": "pvscsi",
        "ethernet0.virtualdev" : "vmxnet3",
        "virtualhw.productcompatibility" : "esx",
        "virtualhw.version" : "10"
      }
    }
  ],
  "provisioners": [
    {
      "type": "windows-restart"
    },
    {
      "type": "powershell",
      "inline": ["((New-Object System.Net.WebClient).DownloadFile(\"{{user `project_url`}}/iso/windows.iso\", \"c:\\users\\{{user `temp_user`}}\\windows.iso\"))"]
    },
    {
      "type": "powershell",
      "script": "scripts/install-vmware-tools.ps1"
    },
    {
      "type": "powershell",
      "inline": "Get-NetAdapter -Physical | Get-NetIPAddress -AddressFamily IPv4 | Select-Object IPAddress",
      "pause_before": "2m"
    },
    {
      "type": "powershell",
      "inline": "while ($true){Start-Sleep -s 60}"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": true,
      "compression_level": 0,
      "output": "{{user `build_name`}}-{{.Provider}}-{{user `version`}}.box"
    }
  ]
}
